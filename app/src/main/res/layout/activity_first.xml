<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6B4E71"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:text="@string/welcome_page"
        android:textSize="35sp"
        android:textStyle="bold" />

    <include
        layout="@layout/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appName"
        android:layout_marginTop="40dp"
        android:id="@+id/include"></include>

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="350dp"
        android:layout_alignLeft="@+id/appName"
        android:layout_alignStart="@+id/appName"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:textStyle="bold"
        android:textColor="#8BBF9F"
        android:background="@android:color/transparent"
        android:text="@string/signUp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="@string/noAccount"
        android:layout_alignBaseline="@+id/signupButton"
        android:layout_alignBottom="@+id/signupButton"
        android:layout_alignLeft="@+id/appName"
        android:layout_alignStart="@+id/appName"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/forgotPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#d3d3d3"
        android:text="@string/forgotPassword"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp" />

</RelativeLayout>